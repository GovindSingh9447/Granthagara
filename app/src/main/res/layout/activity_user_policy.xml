<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ranawattech.Users_Sections.UserPolicyActivity">

    <TextView
        android:id="@+id/pN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_centerHorizontal="true"
        android:textColor="#303030"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pN"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/pnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="1. Information We Collect"
            android:textSize="20sp"/>


            <TextView
                android:id="@+id/ppn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginRight="22dp"
                android:layout_below="@id/pnum"
                android:text="We only collect your username, password and e-mail address when you register in the College Notes app."
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/pnum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ppn"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginTop="15dp"
                android:text="2. Purpose Of  App"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ppn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_below="@id/pnum2"
                android:text="We want to provide every college's notes to our users at one stop destination, the College Notes."
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/pnum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ppn2"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="3. How To Get College Notes"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ppn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_below="@id/pnum3"
                android:text="First of all Choose the College/University, then you will get all the courses list that are available in chosen College/University. Select your Course, then Semester. Now you're done. "
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/pnum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ppn3"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="4. How Users Can Upload Notes"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ppn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginRight="22dp"
                android:layout_below="@id/pnum4"
                android:text="User can upload notes by clicking on 'UPLOAD YOUR NOTES' button. Now user has to fill details in respective filed shown on the screen. Now click on 'SUBMIT' button. Once the notes get successfully submitted, it could be uploaded after being verified by the ADMIN. "
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/pnum5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ppn4"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginTop="15dp"
                android:text="5. College Notes Is Developed By"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ppn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_below="@id/pnum5"
                android:text="@string/this_app_is_made_by_govind_singh_ranawat_powered_by_ranawattech_ranawattech_is_product_base_startup_companies"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/ppn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_below="@id/ppn5"
                android:text="RanaWatTechðŸ is Product-Based Start-Up Company."
                android:textSize="15sp"/>



        </RelativeLayout>





    </ScrollView>

</RelativeLayout>